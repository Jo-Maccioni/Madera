<html>
	<head>
		<meta charset="utf-8">
		<title>MADERA</title>
		
		<!-- CSS boostrap -->
		<link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
		<!-- theme boostrap -->
		<link rel="stylesheet" href="../bootstrap/css/themes/flatly.min.css">

		<!-- JS boostrap -->
		<script src="../bootstrap/js/jquery.js"></script>
		<script src="../bootstrap/js/bootstrap.min.js"></script>
	</head>
	
	<body>
		<nav id="barreNav" class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand">MADERA</a>
				</div>

				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li><a href="#">test</a></li>
					</ul>
				</div>
			</div>
		</nav>
		{% if error is defined and error is not empty %}
		    <div class="alert alert-danger">{{ error.message }}</div>
		{% endif %}
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"></div>
			  
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
					<form id="formConnexion" class="form-horizontal" action="{{ path('login_check') }}" method="post" style="margin-top: 0px">
						<div class="panel panel-primary">
							<div class="panel-heading">
								<h3 class="panel-title" style="text-align: center">Connexion</h3>
							</div>
							<div class="panel-body">
								<div class="form-group">
									<label for="login" class="col-sm-2 control-label">Login</label>
									<div class="col-sm-10">
										<input type="text" class="form-control" id="login" name="login" placeholder="Login" value="{{ last_username }}" required />
									</div>
								</div>
								
								<div class="form-group">
									<label for="inputPassword3" class="col-sm-2 control-label">Password</label>
									<div class="col-sm-10">
										<input type="password" class="form-control" id="inputPassword3" placeholder="Password" required />
									</div>
								</div>
							</div>
							<div class="panel-footer" style="padding: 0px; border-bottom-radius: 0px">
								<button type="submit" class="btn btn-success bnt-sm" style="width: 100%">Connexion</button>
							</div>
						</div>
					</form>
				</div>
			  
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"></div>
			</div>
		</div>
		
		<script>
			$(document).ready(function(){
				var hauteurFenetre = window.innerHeight;
				var hauteurBarreNav = $('#barreNav').outerHeight();
				var hauteurFormConnexion = $('#formConnexion').outerHeight();
				var margin = ((hauteurFenetre - hauteurFormConnexion) / 2) - hauteurBarreNav - 20;
				$('#formConnexion').css('margin-top', margin+'px');
			});
		</script>
	</body>
</html>