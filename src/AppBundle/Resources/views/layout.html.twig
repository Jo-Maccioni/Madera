{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

	{% block body %}
		<nav id="barreNav" class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand">MADERA</a>
				</div>
			</div>
		</nav>
		
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"></div>
			  
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
					<form id="formConnexion" class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post" style="margin-top: 0px">
						{% if csrf_token %}
					        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					    {% endif %}
						<div class="panel panel-primary">
							<div class="panel-heading">
								<h3 class="panel-title" style="text-align: center">Connexion</h3>
							</div>
							<div class="panel-body">
								<div class="form-group">
									<label for="login" class="col-sm-2 control-label">{{ 'security.login.username'|trans }}</label>
									<div class="col-sm-10">
										<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Username" required="required" />
									</div>
								</div>
								
								<div class="form-group">
									<label for="inputPassword3" class="col-sm-2 control-label">{{ 'security.login.password'|trans }}</label>
									<div class="col-sm-10">
										<input type="password" class="form-control" id="password" placeholder="Password" name="_password" required="required" />
									</div>
								</div>
								<div class="form-group">
									<label for="remember_me" class="col-sm-4 control-label" style="text-align:left">{{ 'security.login.remember_me'|trans }}</label>
									<div class="col-sm-8">
										<input type="checkbox" id="remember_me" name="_remember_me" value="on" style="width: 20px; height: 20px;"/>
									</div>
								</div>
									<a href="{{ path('subscription') }}" class="col-sm-7 control-label">S'inscrire</a>
								<div class="form-group">
									<div class="col-sm-12" style="text-align:center">
										{% if error %}
										    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
										{% endif %}
									</div>
								</div>
							</div>
							<div class="panel-footer" style="padding: 0px; border-bottom-radius: 0px">
    							<input class="btn btn-success bnt-sm" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" style="width: 100%"/>
							</div>
						</div>
					</form>
				</div>
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"></div>
			</div>
		</div>
	{% endblock %}