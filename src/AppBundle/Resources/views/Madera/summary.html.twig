{% extends "::base.html.twig" %}


{% block body %}
	<body>
		{% include "AppBundle:Madera:header.html.twig" %}
		
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
					<a class="btn btn-success" href="newProject.php" style="width: 100%">Créer un projet</a>
				</div>
				
				<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
					<a class="btn btn-info" href="{{ path('create_devis') }}" style="width: 100%">Créer un devis</a>
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<h3>Liste des devis</h3>
					
					<div class="table-responsive">
						<table class="table table-hover">

								<tr>
									<th>Référence</th>
									<th>Date de création</th>
									<th>Client</th>
									<th>Montant</th>
									<th>Date de validité</th>
									<th></th>
								</tr>
							{% for devis in devisList %}
								<tr>
									<td>{% if devis.refDevis is not empty %}{{ devis.refDevis }}{% endif %}</td>
									<td>{% if devis.dateDevis is not empty %}{{ devis.dateDevis|date("d/m/Y") }}{% endif %}</td>
									<td>{% if devis.client.prenomClient is not empty %}{{ devis.client.prenomClient }} {{ devis.client.nomClient }}{% endif %}</td>
									<td>{% if devis.amount is not empty %}{{ devis.amount|number_format(2, ',', ' ') }} €{% endif %}</td>
									<td>{% if devis.validatedDateDevis is not empty %}{{ devis.validatedDateDevis|date("m/d/Y") }}{% endif %}</td>
									<td><a class="fa fa-pencil" href="{{ path('show_devis', {'id': devis.id }) }}"></a></td>
								</tr>
							{% endfor %}
						</table>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}